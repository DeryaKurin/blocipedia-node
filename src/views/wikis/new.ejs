<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <br>
      <h1 style="font-style:italic;">Create a new wiki!</h1>
      <img src="/../images/blocipedia-img.jpg" alt="An empty paper with pen">
      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">title must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="body">Wiki body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Wiki body"></textarea>
            <small class="text-muted" id="bodyHelp">body must be 10 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="private">Wiki privacy</label>
          <% if(currentUser.role == 1 || currentUser.role == 2) { %>
            <select class="form-control" name="private" placeholder="Select Wiki privacy">
              <option value = "true">Private</option>
              <option value = "false">Public</option>
            </select>
          <% } else { %>
            <select class="form-control" name="private" placeholder="Select Wiki privacy">
              <option value ="false">Public</option>
            </select>
          <% } %>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
